{
    "name": "gw-entity",
    "version": "0.5.0",
    "description": "Goblinwerks utilities for objects + actors in Roguelikes",
    "main": "dist/gw-entity.js",
    "browser": "dist/gw-entity.min.js",
    "module": "dist/gw-entity.mjs",
    "types": "dist/gw-entity.d.ts",
    "scripts": {
        "compile": "tsc --build tsconfig.json",
        "bundle": "rollup -c",
        "copy": "npm run copy-utils && npm run copy-map && npm run copy-entity && npm run copy-dig",
        "copy-entity": "cp dist/gw-entity.js* docs/js",
        "copy-utils": "cp node_modules/gw-utils/dist/gw-utils.js* docs/js  && cp node_modules/gw-utils/docs/js/manual.js docs/js && cp node_modules/gw-utils/docs/css/* docs/css",
        "copy-map": "cp node_modules/gw-map/dist/gw-map.js* docs/js",
        "copy-dig": "cp node_modules/gw-dig/dist/gw-dig.js* docs/js",
        "build": "npm run compile && npm run bundle && npm run copy && npm run version",
        "serve": "cd docs && http-server -p 8080",
        "test": "jest --runInBand",
        "coverage": "jest --runInBand --coverage",
        "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "version": "node -e 'const v = require(\"./package.json\").version; console.log(v);' > docs/VERSION"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/funnisimo/gw-entity.git"
    },
    "keywords": [
        "roguelike",
        "object",
        "actor",
        "entity",
        "goblinwerks"
    ],
    "author": "Funnisimo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/funnisimo/gw-entity/issues"
    },
    "homepage": "https://github.com/funnisimo/gw-entity#readme",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@types/jest": "^27.0.2",
        "gw-map": "^0.5",
        "gw-utils": "^0.5",
        "gw-dig": "^0.5",
        "http-server": "^0.12.3",
        "jest": "^27.0",
        "jest-diff": "^27.2.0",
        "jest-extended": "^0.11.5",
        "prettier": "^2.4.1",
        "rollup": "^2.35",
        "rollup-plugin-dts": "^3.0.2",
        "rollup-plugin-terser": "^7.0.2",
        "terminal-kit": "^2.1.8",
        "ts-jest": "^27.0",
        "typescript": "^4.4.4"
    },
    "peerDependencies": {
        "gw-map": "^0.5",
        "gw-utils": "^0.5"
    },
    "files": [
        "dist"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    }
}
